@using Rinku.Areas.Identity.Pages.Account
@model LoginModel

<section class="vh-40" style="background-color: #9A616D;border-radius: 1rem;margin-top:50px">
    <div class="container py-3 h-30">
        <div class="row d-flex justify-content-center align-items-center h-40">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            @*<img src="/imagenes/LogoCapta.png" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;margin-top:80px" />*@
                        </div>
                        <div class="col-md-4 col-lg-5 d-flex align-items-center">
                            <div class="card-body p-3 p-lg-3 text-black">

                                <form id=" account" method="post">

                                     <div class="d-flex align-items-center mb-3 pb-1">
                                    @*<i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>*@
                                        <h3 class="fw-normal mb-3 pb-1" style="letter-spacing: 1px;color:blue;border-bottom: 2px solid #88b2ff;"><strong>Recursos Humanos</strong> </h3>
                                    @*<span class="h1 fw-bold mb-0">Logo</span>*@
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-1" style="letter-spacing: 1px;">Iniciar sesión en su cuenta</h5>

                                    <div class="form-outline mb-1">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                    </div>

                                    @*<a class="small text-muted" id="forgot-password" asp-page="./ForgotPassword">¿Se te olvidó tu contraseña?</a>*@

@*                                    <p class="mb-2 pb-lg-2" style="color: #393f81;">
                                        ¿No tienes una cuenta?
                                        <a class="mb-5 pb-lg-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse aquí</a>
                                    </p>*@
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        margin: 0;
        background-color: #D5D8DC;
    }
</style>

